{
  "name": "server",
  "version": "1.0.0",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "pretest": "docker compose -f docker-compose.test.yml up -d",
    "test": "cross-env NODE_ENV=test jest --runInBand",
    "posttest": "docker compose -f docker-compose.test.yml down -v",
    "redis:test:up": "docker compose -f docker-compose.test.yml up -d redis",
    "redis:test:down": "docker compose -f docker-compose.test.yml down -v",
    "redis:dev": "docker run --name redis-dev -p 6379:6379 -d redis:7-alpine || docker start redis-dev"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.14.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.11.13",
    "@types/supertest": "^6.0.3",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.1",
    "jest": "^29.7.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
